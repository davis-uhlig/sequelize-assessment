<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Todo List</title>
    <link rel="stylesheet" href="./main.css">
  </head>
  <body>
    <div class="container">
      <form action="/" method="post">
        <input type="text" id="text-bar" name="newTodo" placeholder="Add a todo...">
        <input type="submit" name="submit" value="Add Todo">
      </form>
    </div>
    <div>
      <h1>To Do List</h1>
      <!-- <p>Click on your todo to move it to move it to your completed tasks!</p> -->
      {{#todos}}

      <!-- <form class="incomplete" action="/{{id}}/delete" method="post">
        <input type="submit" name="incomplete" value="{{.}}">
        {{^completed}}

      </form> -->
      <span>{{todo}}</span>
      <form action="/{{id}}/complete" method="post">
        <button type="submit">Mark As Complete</button>
      </form>
      {{/completed}}
      {{/todos}}
      <!-- <form action="/" method="post">
        <button type="submit">Mark As Complete</button>
      </form> -->
    </div>
    <div>
      <h1>Completed Tasks</h1>
      {{#todos}}
      {{#completed}}
      <!-- <p>{{todo}}</p> -->
      <form class="incomplete" action="/{{id}}/delete" method="post">
        <!-- <input type="submit" name="incomplete" value="{{.}}"> -->
        <span>{{todo}}</span>
        <button type="submit">Delete</button>

      </form>
      {{/completed}}
      {{/todos}}
    </div>

  </body>
</html>
